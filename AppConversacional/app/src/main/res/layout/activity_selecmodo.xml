<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Visual Grave"
            android:textSize="36sp"
            android:drawableLeft="@drawable/icons8operaglasses100" />
        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableLeft="@drawable/icons8glasses100"
            android:text="Visual leve"
            android:textSize="36sp" />
        <Button
            android:id="@+id/button10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableLeft="@drawable/icons8noaudi100"
            android:text="Auditivo"
            android:textSize="20sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>